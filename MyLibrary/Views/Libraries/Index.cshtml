@model IEnumerable<MyLibrary.Models.Library>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">ספריות</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>צור חדש</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountShelves)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.width)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <th>
                    @Html.DisplayFor(model => item.CountShelves)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.width)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">ערוך</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">פרטים</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">מחק</a>
                </td>
            </tr>
        }
    </tbody>
</table>
